{% extends 'base.html.twig' %}

{% block title %}liste des plannings{% endblock %}

{% block body %}
    <h1>liste des plannings </h1>

    <table class="table">
        <thead>
            <tr> <th>Id</th>
                <th>DateHeureDebut</th>
                <th>DateTimeFin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for planning in plannings %}
            <tr>

                <td>{{ planning.dateHeureDebut ? planning.dateHeureDebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ planning.dateTimeFin ? planning.dateTimeFin|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('planning_show', {'id': planning.id}) }}" class="btn btn-primary">Editer</a>
                    <a href="{{ path('planning_edit', {'id': planning.id}) }}" class="btn btn-primary">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun planning trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('planning_new') }}" class="btn btn-primary">Ajouter</a>
    <a href="{{ path('gardes_table_des_matiere') }} "class="btn btn-primary">Retour</a>
{% endblock %}
