                                {% for res in listeGarde %}
                                    <option value="{{ res.id }}">{{ res.getNom }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="timedebut2">de:</label>
                            <input type="time" default id="timedebut2-{{ i }}" name="timedebut2" class="form-select  mb-3"
                                   value="00:00:00"
                                   min="00:00:00" max="23:59:59">
                        </div>
                        <div class="col-md-6">
                            <label for="timeFin2"> A:</label>
                            <input type="time" id="timeFin2-{{ i }}" name="timeFin2"
                                   value="23:59:59"
                                   min="00:00:00" max="23:59:59">
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="row ">
                        <h3>doc3</h3>
