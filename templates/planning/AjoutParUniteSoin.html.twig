                            <select name="resGarde3" id="resGarde3-{{ i }}"class="form-select form-select-lg mb-3">
                                <option value="">Sélectionnez un Responsable de garde</option>
                                {% for res in listeGarde %}
                                    <option value="{{ res.id }}">{{ res.getNom }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="timedebut3">de:</label>
