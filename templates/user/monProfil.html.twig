{% extends 'base.html.twig' %}
{% block title %}
    Mon profil! | {{ parent() }}
{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Salut {{ user.username }} </h1>


        <div class="container">
            <div class="row">
                <div class="col-md-offset-3 col-md-6">Nom: {{user.id}} </div>

            </div>

            <div class="row">

                <div class="col-md-offset-3 col-md-6">Email: {{user.username}}</div>
            </div>


        </div>

        <a href="{{ path ('user_modifierProfil') }} " class="btn btn-primary ">modifier mon profil</a>

    </div>
{% endblock %}



